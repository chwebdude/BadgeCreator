{
    "id": "7ab49414-b37b-4b64-b96e-b66d76d3ec22",
    "name": "badge-creator",
    "friendlyName": "Badge Creator",
    "description": "Tool for creating version badge using shields.io",
    "helpMarkDown": "",
    "category": "Utility",
    "author": "chwebdude",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 0
    },
    "instanceNameFormat": "Create Badge",
    "groups": [
         {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "nameString",
            "type": "string",
            "label": "Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The Name"
        },
        {
            "name": "versionString",
            "type": "string",
            "label": "Version String",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The Version"
        },
        {
            "name": "destinationPath",
            "type": "string",
            "label": "Destination Path",
            "defaultValue": "$(build.artifactstagingdirectory)/badge.svg",
            "required": true,
            "helpMarkDown": "Directory where to save the badge."
        },
        {
            "name": "color",
            "type": "pickList",
            "label": "Color",
            "defaultValue": "green",
            "options": {
                "brightgreen": "Brightgreen", 
                "green": "Green", 
                "yellowgreen": "Yellowgreen", 
                "yellow": "Yellow", 
                "orange": "Orange",                
                "red": "Red",
                "lightgrey": "Lightgrey",
                "blue":"Blue"                
            },
            "helpMarkDown": "The Color of the right side."
        },
        
        {
            "name": "style",
            "type": "pickList",
            "label": "Style",
            "defaultValue": "plastic",
            "options": {
                "plastic": "Plastic", 
                "flat": "Flat",
                "flat-square":"Flat Square",
                "social": "Social"
            },
            "helpMarkDown": "The style of the badge. See https://shields.io/#styles"
        },
        {
            "name": "appendDate",
            "type": "boolean",
            "label": "Append Date",
            "defaultValue": false,
            "required": false,
            "helpMarkDown": "Append the date into the badge ",
            "groupName": "advanced"
        },
        {
            "name": "proxyUrl",
            "type": "string",
            "label": "Proxy Url",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Proxy url. Example: http://yourproxy:8080 ",
            "groupName": "advanced"
        }       
    ],
    "execution": {
        "Node": {
            "target": "dist/index.js"
        }
    }
}